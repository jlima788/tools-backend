{
  "swagger": "2.0",
  "info": {
    "version": "0.0.1",
    "title": "TOOLS-API"
  },
  "host": "127.0.0.1:3000",
  "tags": [
    {
      "name": "auth",
      "description": "Acesso aos endpoints para usuários"
    },
    {
      "name": "tools",
      "description": "Acesso a todos os endpoints de ferramentas"
    }
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "Bearer": {
      "description": "Para acessar a API, um token JWT válido deve ser transmitido em todas as consultas\nem 'Authorization' header.\n\n\nUm token JWT válido é gerado pela API e retornado como resposta de uma chamada\npara a rota /logar colocando um usuário e senha válidos.\n\n\nA seguinte sintaxe deve ser usada no 'Authorization' header :\n\n    Bearer xxxxxx.yyyyyyy.zzzzzz\n",
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "paths": {
    "/user": {
      "post": {
        "tags": [
          "auth"
        ],
        "description": "Cadastrar um novo usuário no sistema.\n",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Colocar o usuario, email e senha",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Cadastrar"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cadastrado com Sucesso",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "500": {
            "description": "Usuário/Email já cadastrado",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/logar": {
      "post": {
        "tags": [
          "auth"
        ],
        "description": "Permitir que os usuários efetuem login e recebam um token\n",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Colocar o email e a senha",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login com Sucesso",
            "schema": {
              "$ref": "#/definitions/Token"
            }
          },
          "400": {
            "description": "Se o usuário não foi encontrado ou com erro durante o login",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "403": {
            "description": "Se o usuário não for encontrado (credenciais erradas) ou se o usuário não puder fazer o login (cliente não ativo)",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/tools": {
      "get": {
        "tags": [
            "tools"
          ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "Lista todas as ferramenta",
        "description": "Obter uma lista de todas as ferramentas existentes",
        "responses": {
          "200": {
            "description": "Um array de ferramentas",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Tool"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
            "tools"
          ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "Cadastra uma ferramenta",
        "description": "Cadastra uma nova ferramenta",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Colocar o título, link, descrição e tags",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ToolCadastrar"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Um array de ferramentas",
            "schema": {
              "type": "object",
              "items": {
                "$ref": "#/definitions/Tool"
              }
            }
          }
        }
      }
    },
    "/tools/{id}": {
      "delete": {
          "tags": [
            "tools"
          ],
          "security": [
            {
              "Bearer": []
            }
          ],
          "summary": "Apaga uma ferramenta",
          "description": "",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "Id da ferramenta para deletar",
              "required": true,
              "type": "integer"
            }
          ],
          "responses": {
            "400": {
              "description": "ID fornecido inválido."
            },
            "401": {
              "description": "Não autorizado."
            },
            "404": {
              "description": "Ferramenta não encontrada"
            }
          }
        }
    },
    "/tools?tag=node": {
    "get": {
        "tags": [
          "tools"
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "Busca uma ferramenta por uma tag digitada",
        "description": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "tag",
            "in": "query",
            "description": "Tag da ferramenta que se quer encontrar",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "401": {
            "description": "Não autorizado."
          },
          "200": {
            "description": "Um array de ferramentas",
            "schema": {
              "type": "object",
              "items": {
                "$ref": "#/definitions/Tool"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Cadastrar": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "example": "username"
        },
        "email": {
          "type": "string",
          "example": "email@mail.com"
        },
        "password": {
          "type": "string",
          "example": "123456"
        }
      }
    },
    "Login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "email@mail.com"
        },
        "password": {
          "type": "string",
          "example": "123456"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "update_at": {
          "type": "string",
          "format": "date-time"
        },
        "id": {
          "type": "integer"
        },
      }
    },
    "Token": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        },
        "error": {
          "type": "string"
        }
      }
    },
    "Tool": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "example": 1
        },
        "user_id": {
          "type": "integer",
          "example": 1
        },
        "title": {
          "type": "string",
          "example": "hotel"
        },
        "link": {
          "type": "string",
          "example": "https://github.com/typicode/hotel"
        },
        "description": {
          "type": "string",
          "example": "Local app manager. Start apps within your browser, developer tool with local .localhost domain and https out of the box.m"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": ["node", "organizing", "webapps", "domain", "developer", "https", "proxy"]
        }
      }
    },
    "ToolCadastrar": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "example": "hotel"
        },
        "link": {
          "type": "string",
          "example": "https://github.com/typicode/hotel"
        },
        "description": {
          "type": "string",
          "example": "Local app manager. Start apps within your browser, developer tool with local .localhost domain and https out of the box.m"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": ["node", "organizing", "webapps", "domain", "developer", "https", "proxy"]
        }
      }
    }
  }
}
